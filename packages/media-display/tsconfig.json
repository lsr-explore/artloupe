{
  "extends": "../../tsconfig.packages.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "lib": ["ESNEXT", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler", // or "nodenext"
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "types": ["next", "react"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/test-*",
    "**/tests/**",
    "**/__tests__/**",
    "**/*.stories.tsx"
  ],
  "references": [
    { "path": "../shared-types" },
    { "path": "../react-query-hooks" }
  ]
}
